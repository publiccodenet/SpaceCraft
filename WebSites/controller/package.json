{
  "name": "spacecraft-controller",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.5.0",
  "description": "SpaceCraft controller.",
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "/build",
    "/src"
  ],
  "sideEffects": true,
  "scripts": {
    "clean": "rm -rf build && rm -rf bundle",
    "lint": "eslint -c .eslintrc.js ./src --fix",
    "build": "pnpm clean && tsc && rollup -c && dts-bundle-generator -o bundle/index.d.ts build/index.d.ts && rm -rf build && mv bundle build",
    "dev": "pnpm clean && tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:publiccodenet/SpaceCraft.git"
  },
  "keywords": [
    "spacecraft",
    "controller",
    "publiccode",
    "spacetime"
  ],
  "license": "MIT ",
  "bugs": {
    "url": "https://github.com/publiccodenet/SpaceCraft/issues"
  },
  "homepage": "https://spacetime.publiccode.net/",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.1.0",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-import-maps": "^0.2.1",
    "@web/dev-server-rollup": "^0.6.4",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.32.0",
    "eslint-plugin-html": "^8.1.3",
    "globals": "^16.3.0",
    "rollup": "^4.46.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0"
  }
}
