{
  "version": "1.0",
  "description": "Configuration for exporting SpaceCraft content to Unity",
  "outputPath": "./Exports/Unity",
  "targetUnityVersion": "2022.3",
  "packageName": "com.spacecraft.content",
  "packageDisplayName": "SpaceCraft Content",
  "packageVersion": "1.0.0",
  "packageDescription": "SpaceCraft content package for Unity",
  "exportOptions": {
    "compressTextures": true,
    "textureFormat": "automatic",
    "optimizeMeshes": true,
    "generatePrefabs": true,
    "includeMetadata": true,
    "exportCollections": [
      "spacecraft",
      "parts",
      "tutorials",
      "missions"
    ],
    "skipCollections": [
      "dev-only",
      "tests"
    ]
  },
  "assetHandlers": {
    "models": {
      "fileExtensions": [".fbx", ".obj", ".gltf"],
      "importSettings": {
        "scale": 1.0,
        "generateColliders": true
      }
    },
    "textures": {
      "fileExtensions": [".png", ".jpg", ".tga"],
      "importSettings": {
        "generateMipmaps": true,
        "maxTextureSize": 2048
      }
    },
    "audio": {
      "fileExtensions": [".wav", ".mp3", ".ogg"],
      "importSettings": {
        "quality": "high",
        "forceToMono": false
      }
    }
  },
  "logging": {
    "level": "info",
    "outputToFile": true,
    "logFilePath": "./Logs/unity-export.log"
  }
} 