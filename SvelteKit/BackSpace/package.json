    "schemas:regenerate:unity": "npm run schemas:prepare:unity && tsx scripts/unity-automation.js regenerate-schemas",
    "unity:build-dev": "tsx scripts/unity-automation.js build-dev",
    "unity:build-prod": "tsx scripts/unity-automation.js build-prod",
    "unity:serve-webgl": "tsx scripts/unity-automation.js serve-webgl",
    "unity:ci": "tsx scripts/unity-automation.js ci",
    "unity:logs": "tsx scripts/unity-automation.js check-logs",
    "unity:env": "tsx scripts/unity-env.js --verbose",
    "unity:env:shell": "tsx scripts/unity-env.js --shell > .unity-env",
    "unity:discover": "tsx scripts/unity-env.js --verbose",
    "unity:list-versions": "tsx scripts/unity-automation.js list-versions",
    "unity:generate-schemas": "tsx scripts/unity-automation.js generate-schemas",
    "unity:build-webgl-dev": "tsx scripts/unity-automation.js build-webgl-dev",
