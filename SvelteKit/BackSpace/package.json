    "schemas:export:unity": "copyfiles -f ../../Content/schema/*.json ../../Unity/CraftSpace/Assets/StreamingAssets/Content/schemas/",
    "schemas:prepare:unity": "npm run schemas:generate:json && npm run schemas:export:unity",
    "schemas:export": "npm run schemas:prepare:unity",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "collection:list": "tsx scripts/collection-list.js",
    "collection:create": "tsx scripts/collection-create.js",
    "collection:process": "tsx scripts/collection-process.js",
    "collection:manage": "tsx scripts/collection-manage.js",
    "collection:debug": "tsx scripts/collection-debug.js",
    "item:list": "tsx scripts/item-manage.js list",
    "item:get": "tsx scripts/item-manage.js get",
    "item:create": "tsx scripts/item-create.js",
    "item:fetch": "tsx scripts/item-fetch.js",
    "content:init": "tsx scripts/content-init.js",
    "content:info": "tsx scripts/content-info.js",
    "connector:manage": "tsx scripts/connector-manage.js",
