    "@tailwindcss/postcss": "^4.0.14",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "postcss": "^8.5.3",
    "svelte": "^5.0.0-next.69",
