{
  "name": "backspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "# SvelteKit Commands": "Basic SvelteKit project commands",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    
    "# Schema Processing": "Commands for schema generation, export and validation",
    "schemas:generate": "tsx scripts/schemas-export.js",
    "schemas:debug": "tsx scripts/schemas-debug.js",
    "schemas:export": "copyfiles -f ../../Content/schemas/*.json ../../Unity/SpaceCraft/Assets/StreamingAssets/Content/schemas/",
    "schemas:export:unity": "npm run schemas:export",
    
    "# Content Pipeline": "High-level content pipeline commands",
    "pipeline": "tsx scripts/pipeline.js",
    "pipeline:run": "tsx scripts/pipeline.js run",
    "pipeline:import": "tsx scripts/pipeline.js import",
    "pipeline:export": "tsx scripts/pipeline.js export --clean",
    "pipeline:bootstrap": "tsx scripts/pipeline.js bootstrap",
    
    "# Internet Archive": "Internet Archive specific commands",
    "ia:import": "tsx scripts/pipeline.js import --importer ia",
    
    "# Content Management": "Direct content management commands",
    "content:init": "tsx scripts/content-init.js",
    "content:info": "tsx scripts/content-info.js",
    "collection:list": "tsx scripts/collection-list.js",
    "collection:create": "tsx scripts/collection-create.js",
    "collection:manage": "tsx scripts/collection-manage.js",
    "collection:validate": "tsx scripts/collection-exclude.js check",
    "collection:excluded": "tsx scripts/collection-exclude.js list",
    
    "# Item Management": "Individual item management",
    "item:list": "tsx scripts/item-manage.js list",
    "item:get": "tsx scripts/item-manage.js get",
    "item:create": "tsx scripts/item-create.js",
    
    "# Unity Integration": "Unity-specific commands",
    "unity:setup": "tsx scripts/unity-automation.js install",
    "unity:env": "tsx scripts/unity-env.js --verbose",
    "unity:env:shell": "tsx scripts/unity-env.js --shell > .unity-env",
    "unity:detect-env": "tsx scripts/unity-automation.js detect-env",
    "unity:discover": "tsx scripts/unity-env.js --verbose",
    "unity:versions": "tsx scripts/unity-automation.js list-versions",
    "unity:build:webgl:prod": "tsx scripts/unity-automation.js build-webgl-prod",
    "unity:build:webgl:dev": "tsx scripts/unity-automation.js build-webgl-dev",
    "unity:serve": "tsx scripts/unity-automation.js serve-webgl",
    "unity:schemas": "npm run schemas:generate && tsx scripts/unity-automation.js regenerate-schemas",
    "unity:linkup": "tsx scripts/unity-automation.js linkup-webgl",
    "unity:copydown": "tsx scripts/unity-automation.js copydown-webgl",
    "unity:copyup": "tsx scripts/unity-automation.js copyup-webgl",
    "unity:logs": "tsx scripts/unity-automation.js check-logs",
    "unity:start": "tsx scripts/unity-automation.js launch",
    "unity:openproject": "tsx scripts/unity-automation.js run openproject",
    "unity:prebuild": "tsx scripts/unity-automation.js prebuild-webgl",
    "unity:install:sveltekit": "tsx scripts/unity-automation.js install-unity --app spacecraft --source ../../Unity/SpaceCraft/Builds/SpaceCraft --clean",
    "unity:install:website": "tsx scripts/unity-automation.js install-unity --app spacecraft --source ../../Unity/SpaceCraft/Builds/SpaceCraft --target ../../WebSites/spacetime --clean"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.0",
    "better-sqlite3-session-store": "^0.1.0",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "felte": "^1.3.0",
    "fs-extra": "^11.3.0",
    "glob": "^9.3.5",
    "image-size": "^2.0.2",
    "internetarchive-sdk-js": "^1.0.37",
    "open": "^10.1.1",
    "p-queue": "^8.1.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "piscina": "^5.0.0-alpha.0",
    "sharp": "^0.34.1",
    "trash": "^8.1.1",
    "uuid": "^9.0.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.1.1",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "svelte": "^5.0.0-next.69",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^4.0.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  }
}
